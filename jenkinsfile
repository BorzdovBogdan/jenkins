pipeline {
    agent any
    stages {
        stage('Preparation') { // for display purposes
            // Get some code from a GitHub repository
            steps {
                git branch: 'jenkins', url: "https://github.com/BorzdovBogdan/jenkins.git"
                //git 'https://github.com/BorzdovBogdan/jenkins.git'
                // Get the Maven tool.
                // ** NOTE: This 'M3' Maven tool must be configured
                // **       in the global configuration.
            }
        }
        stage('Package') {
            // Run the maven build
            steps{
                echo 'Build...'
                sh '/tmp/sbt/sbt/bin/sbt package'
            }
        }
        stage('Test') {
            steps {
                echo "Testing..."
                sh "/tmp/sbt/sbt/bin/sbt test"
            }
        }
        /*stage('Assembly') {
            steps {
                echo "Assembly..."
                sh "/tmp/sbt/sbt/bin/sbt assembly"
            }
        }*/
        stage('Run') {
            steps {
                echo "run"
                sh '/tmp/sbt/sbt/bin/sbt "runMain JenkinsSparkDemo 192.168.225.234 /data/hotels_stays_to_es/ /data/hotels_stays_time/"'
            }
        }
    }
}